# get current host related info
function ii()
{
      echo -e "\nHello ${RED}$USER"
      echo -e "\nSystem information:$NC " ; uname -a
      echo -e "\n${RED}Machine stats :$NC " ; uptime
      echo -e "\n${RED}Storage stats :$NC " ; df -h | grep -v /var/run | grep -v /var/lock | grep -v ureadahead | grep -v /dev/shm echo -e "\n${RED}Memory stats :$NC " ; free -m 
      echo -en "\n${RED}Local IP Address :$NC" ; ifconfig | grep 'inet addr:' | grep -v '127.0.0.1' | cut -d: -f2 | awk '{ printf "%s",$1}'
      echo -en "\n${RED}ISP Address :$NC" ; wget http://automation.whatismyip.com/n09230945.asp -O - -q
      echo ""
}

function extract {
  if [ -z "$1" ]; then
    # display usage if no parameters given
    echo "Usage: extract <path/file_name>.<zip|rar|bz2|gz|tar|tbz2|tgz|Z|7z|xz|ex|tar.bz2|tar.gz|tar.xz>"
  else
    if [ -f $1 ] ; then
      case $1 in
        *.tar.bz2)   tar xvjf ../$1    ;;
        *.tar.gz)    tar xvzf ../$1    ;;
        *.tar.xz)    tar xvJf ../$1    ;;
        *.lzma)      unlzma ../$1      ;;
        *.bz2)       bunzip2 ../$1     ;;
        *.rar)       unrar x -ad ../$1 ;;
        *.gz)        gunzip ../$1      ;;
        *.tar)       tar xvf ../$1     ;;
        *.tbz2)      tar xvjf ../$1    ;;
        *.tgz)       tar xvzf ../$1    ;;
        *.zip)       unzip ../$1       ;;
        *.Z)         uncompress ../$1  ;;
        *.7z)        7z x ../$1        ;;
        *.xz)        unxz ../$1        ;;
        *.exe)       cabextract ../$1  ;;
        *)           echo "extract: '$1' - unknown archive method" ;;
      esac
    else
      echo "$1 - file does not exist"
    fi
  fi
}

